<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
    <tag>poll</tag>
    <tagClass>org.primefaces.component.poll.PollTag</tagClass>
    <componentClass>org.primefaces.component.poll.Poll</componentClass>
    <componentHandlerClass>org.primefaces.component.poll.PollHandler</componentHandlerClass>
    <componentType>org.primefaces.component.Poll</componentType>
    <componentFamily>org.primefaces.component</componentFamily>
    <rendererType>org.primefaces.component.PollRenderer</rendererType>
    <rendererClass>org.primefaces.component.poll.PollRenderer</rendererClass>
    <parent>javax.faces.component.UICommand</parent>
    <interfaces>
        <interface>
            <name>org.primefaces.component.api.AjaxSource</name>
        </interface>
        <interface>
			<name>org.primefaces.component.api.Widget</name>
		</interface>
    </interfaces>
    <attributes>
        &standard_uicomponent_attributes;
        &widget_var_attribute;
        <attribute>
            <name>interval</name>
            <required>false</required>
            <defaultValue>2</defaultValue>
            <type>java.lang.Integer</type>
            <description>Interval in seconds to do periodic ajax requests.</description>
        </attribute>
        <attribute>
            <name>update</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>
		Component(s) to be update after async partial submit request.
            </description>
        </attribute>
        <attribute>
            <name>listener</name>
            <required>false</required>
            <type>javax.el.MethodExpression</type>
            <method-signature>void listener()</method-signature>
            <description>Method expression to invoke periodically.</description>
        </attribute>
        <attribute>
            <name>actionListener</name>
            <required>false</required>
            <type>javax.faces.event.ActionListener</type>
            <method-signature>void actionListener(javax.faces.event.ActionEvent)</method-signature>
            <ignoreInComponent>true</ignoreInComponent>
            <description>ActionListener method expression.</description>
        </attribute>
        <attribute>
            <name>action</name>
            <required>false</required>
            <type>javax.el.MethodExpression</type>
            <method-signature>java.lang.Object action()</method-signature>
            <ignoreInComponent>true</ignoreInComponent>
            <description>Action method expression or literal text defining a navigation outcome</description>
        </attribute>
        <attribute>
            <name>immediate</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <ignoreInComponent>true</ignoreInComponent>
            <description>Immediate flag to define the lifecycle phase to execute actions</description>
        </attribute>
        <attribute>
            <name>onstart</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>
		Javascript event to be called before ajax request begins.
            </description>
        </attribute>
        <attribute>
            <name>oncomplete</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>
		Javascript event to be called when ajax request is completed.
            </description>
        </attribute>
        <attribute>
            <name>process</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>
		Component(s) to process partially.
            </description>
        </attribute>
        <attribute>
            <name>onerror</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>
		Javascript event handler to be called when ajax request fails.
            </description>
        </attribute>
        <attribute>
            <name>onsuccess</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>
                Javascript event handler to be called when ajax request succeeds.
            </description>
        </attribute>
        <attribute>
            <name>global</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>true</defaultValue>
            <description>
                Global ajax requests are listened by ajaxStatus component, setting global to false will not trigger ajaxStatus.
            </description>
        </attribute>
        <attribute>
            <name>async</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>
                When set to true, ajax requests will not be queued.
            </description>
        </attribute>
        <attribute>
            <name>autoStart</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>true</defaultValue>
            <description>
		In autoStart mode, polling starts automatically on page load, to start polling on demand set to false.
            </description>
        </attribute>
    </attributes>
    <resources>
        <resource>
            <name>jquery/jquery.js</name>
        </resource>
        <resource>
            <name>core/core.js</name>
        </resource>
        <resource>
            <name>poll/poll.js</name>
        </resource>
    </resources>
</component>